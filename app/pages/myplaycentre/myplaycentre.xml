<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  xmlns:statusbar="nativescript-statusbar"
  loaded="pageLoaded">

  <statusbar:StatusBar ios:barStyle="light" />

  <page.actionBar>
    <action-bar title="Select Playcentre">
      <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="GoBack"/>
      <action-bar.actionItems>
        <ios>
          <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
        </ios>
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>

  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

      <ScrollView>

        <stack-layout>
          <ListView items="{{ playcentreList }}" height="100%">
            <ListView.itemTemplate>
              <wrap-layout class="list-item" tap="GotoPlaycentre">
                <Label text="{{ Name }}" class="item-label"/>
              </wrap-layout>
            </ListView.itemTemplate>
          </ListView>

          <Button tap="Join" text="Join a playcentre" class="btn btn-primary btn-normal"/>
          <Button tap="Login" text="Create a new playcentre" class="btn btn-primary btn-normal"/>
        </stack-layout>
      </ScrollView>


    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>

